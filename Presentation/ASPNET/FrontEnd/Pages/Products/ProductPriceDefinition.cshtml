@page
@{
    ViewData["Title"] = "Product Price Definition";
}

<div id="app" v-cloak>

    <div class="row">
        <div class="col-12">
            <div class="grid-container">
                <div ref="mainGridRef"></div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" ref="mainModalRef" id="MainModal" aria-hidden="true" tabindex="-1"
         data-bs-focus="false" data-bs-backdrop="static">

        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">{{ state.mainTitle }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" v-model="state.id" id="Id" name="Id" />

                    <form id="MainForm">

                        <div class="row">
                            <div class="col-md-12">

                                <div class="card">
                                    <div class="card-header">
                                        <h5>Main Info</h5>
                                    </div>

                                    <div class="card-body">

                                        <!-- Row 1 -->
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label>Product</label>
                                                <div ref="productIdRef"></div>
                                                <label class="text-danger">{{ state.errors.productId }}</label>
                                            </div>
                                             @* <div class="col-md-6">
                                                <label for="Name">Product Name</label>
                                                <input ref="nameRef" v-model="state.productName">
                                                <label class="text-danger">{{ state.errors.productName }}</label>
                                            </div> *@
                                        </div>

                                        <!-- Row 2 -->
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label>Cost Price</label>
                                                <input v-model="state.costPrice" class="form-control" type="number" step="0.01" />
                                                <label class="text-danger">{{ state.errors.costPrice }}</label>
                                            </div>

                                            <div class="col-md-6">
                                                <label>Margin Percentage (%)</label>
                                                <input v-model="state.marginPercentage" class="form-control" type="number" step="0.01" />
                                                <label class="text-danger">{{ state.errors.marginPercentage }}</label>
                                            </div>
                                        </div>

                                        <!-- Row 3 -->
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label>Sale Price</label>
                                                <input v-model="state.salePrice" class="form-control" type="number" step="0.01" />
                                                <label class="text-danger">{{ state.errors.salePrice }}</label>

                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-check mt-4">
                                                    <input v-model="state.isActive" id="IsActive" type="checkbox" class="form-check-input" />
                                                    <label for="IsActive" class="form-check-label">Is Active?</label>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Row 4 -->
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label>Effective From</label>
                                                <input v-model="state.effectiveFrom" type="date" class="form-control" disabled/>
                                                <label class="text-danger">{{ state.errors.effectiveFrom }}</label>
                                            </div>

                                            <div class="col-md-6">
                                                <label>Effective To</label>
                                                <input v-model="state.effectiveTo" type="date" class="form-control" />
                                                <label class="text-danger">{{ state.errors.effectiveTo }}</label>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label>Currency Code</label>
                                                <input v-model="state.currencyCode" class="form-control" />
                                                <label class="text-danger">{{ state.errors.currencyCode }}</label>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </form>
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                    <button type="button"
                            id="MainSaveButton"
                            class="btn"
                            v-bind:class="state.deleteMode ? 'btn-danger' : 'btn-primary'"
                            v-on:click="handler.handleSubmit"
                            v-bind:disabled="state.isSubmitting">

                        <span class="spinner-border spinner-border-sm me-2"
                              v-if="state.isSubmitting"></span>

                        <span v-if="!state.isSubmitting">{{ state.deleteMode ? 'Delete' : 'Save' }}</span>
                        <span v-else>{{ state.deleteMode ? 'Deleting...' : 'Saving...' }}</span>
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/FrontEnd/Pages/Products/ProductPriceDefinition.cshtml.js"></script>
}