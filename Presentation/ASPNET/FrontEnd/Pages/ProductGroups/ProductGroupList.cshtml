    <div class="modal fade"
         ref="attributesModalRef"
         id="AttributesModal"
         tabindex="-1"
         data-bs-focus="false"
         data-bs-backdrop="static">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        {{ state.isViewMode ? 'View Product Attributes' : 'Manage Product Attributes' }}
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <!-- Loader -->
                    <div v-if="state.isLoadingAttributes" class="text-center my-3">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p class="mt-2 text-muted">Loading attributes...</p>
                    </div>

                    <!-- Table -->
                    <div v-else>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Attribute Name</th>
                                          <th>Attribute Values</th>
                                    <th v-if="!state.isViewMode" style="width: 120px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="(attr, index) in state.attributes" :key="index">
                                    <td>
                                        <input v-model="attr.name"
                                               type="text"
                                               class="form-control"
                                               placeholder="Enter attribute name"
                                               :readonly="state.isViewMode" />
                                    </td>
                                    <td>
                                        <div v-for="(val, j) in attr.values" :key="j" class="d-flex mb-1">
                                            <input v-model="val.valueName"
                                                   type="text"
                                                   class="form-control me-2"
                                                   placeholder="Enter value" />
                                            <button v-if="!state.isViewMode"
                                                    class="btn btn-danger btn-sm"
                                                    @@click="handler.removeAttributeValue(index, j)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                        <button v-if="!state.isViewMode"
                                                class="btn btn-outline-primary btn-sm"
                                                @@click="handler.addAttributeValue(index)">
                                            + Add Value
                                        </button>
                                    </td>
                                    <td v-if="!state.isViewMode">
                                        <button type="button"
                                                class="btn btn-danger btn-sm"
                                                v-on:click="handler.removeAttribute(index)">
                                            <i class="bi bi-trash"></i>Remove Attribute
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Add new row button (only in Add/Edit mode) -->
                        <button v-if="!state.isViewMode"
                                type="button"
                                class="btn btn-primary btn-sm"
                                v-on:click="handler.addAttribute">
                            <i class="bi bi-plus-circle"></i> Add Attribute
                        </button>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                    <!-- Save button hidden in View mode -->
                    <button v-if="!state.isViewMode"
                            type="button"
                            class="btn"
                            id="AttributeSaveButton"
                            v-bind:class="state.deleteMode ? 'btn-danger' : 'btn-primary'"
                            v-on:click="handler.saveAttributesData"
                            v-bind:disabled="state.isSubmitting">
                        <span class="spinner-border spinner-border-sm me-2"
                              v-if="state.isSubmitting"
                              role="status"
                              aria-hidden="true"></span>
                        <span v-if="!state.isSubmitting">{{ state.deleteMode ? 'Delete' : 'Save' }}</span>
                        <span v-else>{{ state.deleteMode ? 'Deleting...' : 'Saving...' }}</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
