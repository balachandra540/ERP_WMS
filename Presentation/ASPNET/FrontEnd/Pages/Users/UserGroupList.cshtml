@page
@{
    ViewData["Title"] = "User Group List";
}

<div id="app" v-cloak>
    <div class="row">
        <div class="col-12">
            <div class="grid-container">
                <div ref="mainGridRef"></div>
            </div>
        </div>
    </div>

    <div class="modal fade"
         ref="mainModalRef"
         id="MainModal"
         tabindex="-1"
         aria-hidden="true"
         data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" v-text="state.mainTitle"></h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" v-model="state.id" />

                    <form id="MainForm">
                        <div class="card">
                            <div class="card-header">
                                <h5>Main Info</h5>
                            </div>

                            <div class="card-body">

                                <div class="row mb-2">
                                    <div class="col-md-6">
                                        <label>Name</label>
                                        <input ref="nameRef" v-model="state.name" />
                                        <label class="text-danger" v-text="state.errors.name"></label>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-12">
                                        <label>Description</label>
                                        <textarea class="form-control"
                                                  rows="3"
                                                  v-model="state.description"></textarea>
                                    </div>
                                </div>

                                <!-- CHECKBOXES -->
                                <div class="row mb-2">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   v-model="state.isActive"
                                                   id="IsActive" />
                                            <label class="form-check-label" for="IsActive">
                                                Is Active
                                            </label>
                                        </div>
                                    </div>

                                   
                                </div>

                                
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Close
                    </button>

                    <button type="button"
                            class="btn"
                            :class="state.deleteMode ? 'btn-danger' : 'btn-primary'"
                            @@click ="handler.handleSubmit"
                            :disabled="state.isSubmitting">
                        <span v-if="state.isSubmitting"
                              class="spinner-border spinner-border-sm me-2"></span>
                        {{ state.deleteMode ? 'Delete' : 'Save' }}
                    </button>
                </div>

            </div>
        </div>
    </div>
    <div class="modal fade" id="RoleModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Manage Group Roles</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info py-2">
                        Select the roles to assign to the <strong>{{ state.name }}</strong> group.
                    </div>
                    <div id="RoleGrid"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" v-on:click="handler.saveRoles" :disabled="state.isRoleSubmitting">
                        <span v-if="state.isRoleSubmitting" class="spinner-border spinner-border-sm me-2"></span>
                        <span v-if="!state.isRoleSubmitting">Save Roles</span>
                        <span v-else>Saving...</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/FrontEnd/Pages/Users/UserGroupList.cshtml.js"></script>
}
